{% extends 'base-admin.html.twig' %}

{% block title %}Commande n°{{ order.ref }}{% endblock %}

{% block body %}
    <!-- Début du main -->
    <main id="layoutSidenav_content">
        <div class="container-fluid">

            <ul class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
                <li class="breadcrumb-item active">Commandes</li>
            </ul>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-dolly mr-1"></i>
                    Détail de la commande n°{{ order.ref }}
                </div>
                <div class="card-body">

                    <table class="table table-striped table-dark">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ order.id }}</td>
                            </tr>
                            <tr>
                                <th>Ref</th>
                                <td>{{ order.ref }}</td>
                            </tr>
                            <tr>
                                <th>Créé le</th>
                                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ order.status }}</td>
                            </tr>
                            <tr>
                                <th>Total</th>
                                <td>{{ order.amount }}</td>
                            </tr>
                            <tr>
                                <th>Adresse de livraison</th>
                                <td>{{ order.deliveryPoint }}</td>
                            </tr>
                            <tr>
                                <th>Moyens de paiement</th>
                                <td>{{ order.payment }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-primary" role="button" href="{{ path('orders_index') }}">Retour à la liste</a>

                    <a class="btn btn-secondary" role="button" href="{{ path('orders_edit', {'id': order.id}) }}">Edition</a>
                </div>
            </div>
        </div>
    </main>
</div>                
{% endblock %}
