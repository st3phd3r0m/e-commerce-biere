{% extends 'base-admin.html.twig' %}

{% block title %}Liste des categories de boisson en bdd{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

<div class="p-5">
    <h1>Liste des categories de boisson en bdd</h1>

    <a class="btn btn-success float-right" href="{{ path('categories_new') }}">Ajouter une ctaégorie</a>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom de la catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('categories_edit', {'id': category.id}) }}">Modifier</a>
                    {{ include('categories/_delete_form.html.twig') }}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de catégorie en bdd</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success float-right" href="{{ path('categories_new') }}">Ajouter une ctaégorie</a>

</div>

{% endblock %}
