{% extends 'base.html.twig' %}

{% block title %}Volumes index{% endblock %}

{% block body %}
    <h1>Volumes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Volume</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for volume in volumes %}
            <tr>
                <td>{{ volume.id }}</td>
                <td>{{ volume.volume }}</td>
                <td>
                    <a href="{{ path('volumes_show', {'id': volume.id}) }}">show</a>
                    <a href="{{ path('volumes_edit', {'id': volume.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('volumes_new') }}">Create new</a>
{% endblock %}
