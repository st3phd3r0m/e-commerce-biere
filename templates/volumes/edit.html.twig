                <div class="card-body">

                    <a class="btn btn-primary float-right" href="{{ path('volumes_index') }}">Retour à la lite des volumes</a>

                    {{ include('volumes/_form.html.twig', {'button_label': 'Update'}) }}

                    {{ include('volumes/_delete_form.html.twig') }}

