{% extends 'base-admin.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Panier</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Quantitée</th>
                <td>{{ cart.quantity }}</td>
            </tr>
            <tr>
                <th>Prix Unitaire</th>
                <td>{{ cart.unitPrice }}</td>
            </tr>
            <tr>
                <th>Montant total</th>
                <td>{{ cart.ammount }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" role="button" href="{{ path('cart_index') }}">Retour à la liste</a>

    <a class="btn btn-secondary" role="button" href="{{ path('cart_edit', {'id': cart.id}) }}">Edition</a>
</div>    
{% endblock %}
