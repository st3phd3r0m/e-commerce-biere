{% extends 'base-admin.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<!-- Début du main -->
<main id="layoutSidenav_content">
    <div class="container-fluid">

        <ul class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item active">Paniers</li>
        </ul>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-cart-plus"></i></i>
                Détail du panier
            </div>
            <div class="card-body">

                <table class="table table-striped table-dark">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ cart.id }}</td>
                        </tr>
                        <tr>
                            <th>Quantitée</th>
                            <td>{{ cart.quantity }}</td>
                        </tr>
                        <tr>
                            <th>Prix unitaire</th>
                            <td>{{ cart.unitPrice }}</td>
                        </tr>
                        <tr>
                            <th>Montant total</th>
                            <td>{{ cart.ammount }}</td>
                        </tr>
                    </tbody>
                </table>

                <a class="btn btn-primary" role="button" href="{{ path('cart_index') }}">Retour à la liste</a>

                <a class="btn btn-secondary" role="button" href="{{ path('cart_edit', {'id': cart.id}) }}">Edition</a>
            </div>   
        </div>  
    </div>
</main>      

</div>
{% endblock %}
