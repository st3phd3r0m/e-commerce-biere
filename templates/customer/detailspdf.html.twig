{% block title %}BierShop - Facturation.pdf
{% endblock %}

{% block body %}

	<div class="d-block px-5">
		<a class="navbar-brand" href="{{ path('home') }}" title="retour à l'accueil"><img class="logo" src="{{ asset('images/miscellaneous/logo.png') }}"></a>
	</div>
	<main id="layoutSidenav_content">

		<div class="container-fluid">

			<h2 class="m-5">Vos informations personnelles en format pdf</h2>

			<div class="card my-4 mx-auto w-50">
				<div class="card-header">
					<i class="fas fa-beer"></i>
					Vos coordonnées de livraison
				</div>
				<div class="card-body">
					<div class="pt-3 pb-2">
						<p class="d-inline p-3">
							<span class="font-weight-bold">Prénom :
							</span>
							{{ app.user.firstname }}</p>
						<p class="d-inline p-3">
							<span class="font-weight-bold">Nom :
							</span>
							{{ app.user.lastname }}</p>
					</div>
					<div class="pt-3">
						<p class="d-inline px-3">
							<span class="font-weight-bold">Ville :
							</span>
							{{ app.user.city }}</p>
						<p class="d-inline px-3">
							<span class="font-weight-bold">Code postal :</span>
							{{ app.user.postalCode }}</p>
						<p class="d-block px-3">
							<span class="font-weight-bold">Adresse :
							</span>
							{{ app.user.adress }}</p>
					</div>
					<div class="pb-3">
						<p class="d-block px-3">
							<span class="font-weight-bold">Adresse email :
							</span>
							{{ app.user.email }}</p>
						<p class="d-block px-3">
							<span class="font-weight-bold">Téléphone :
							</span>
							{{ app.user.phone }}</p>
					</div>
				</div>
			</div>

		</div>
	</main>


{% endblock %}
