{% extends 'base.html.twig' %}

{% block title %}Flavors index{% endblock %}

{% block body %}
    <h1>Flavors index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for flavor in flavors %}
            <tr>
                <td>{{ flavor.id }}</td>
                <td>{{ flavor.name }}</td>
                <td>
                    <a href="{{ path('flavors_show', {'id': flavor.id}) }}">show</a>
                    <a href="{{ path('flavors_edit', {'id': flavor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('flavors_new') }}">Create new</a>
{% endblock %}
