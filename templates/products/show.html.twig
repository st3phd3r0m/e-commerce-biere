{% extends 'base-admin.html.twig' %}

{% block title %}Détail de l'article #{{ product.id }} {% endblock %}

{% block body %}

<div class="p-5">

    <h1>Détail de l'article #{{ product.id }}</h1>

    <a class="btn btn-primary float-right" href="{{ path('products_index') }}">Retour à la liste des produits</a>

    <a class="btn btn-warning float-right" href="{{ path('products_edit', {'id': product.id}) }}">Modifier les informations du produit</a>

    <table class="table text-center">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom du produit</th>
                <td>{{ product.name }}</td>
            </tr>  
            <tr>
                <th>Produit créé le</th>
                <td>{{ product.createdAt | date('d.m.Y') }}</td>
            </tr>
            <tr>
                <th>Produit mis à jour le</th>
                <td>{{ product.updatedAt | date('d.m.Y') }}</td>
            </tr>
            <tr>
                <th>Illustration</th>
                <td>
                    <img class="d-block w-50 p-3" src="{{ asset('images/products/'~ product.image ) }}" alt="{{ product.name }}">
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Degré d'alcool</th>
                <td>{{ product.degree }}&deg;</td>
            </tr>
            <tr>
                <th>Prix unitaire</th>
                <td>{{ product.price }}&euro;</td>
            </tr>
            <tr>
                <th>Quantité en stock</th>
                <td>{{ product.quantity }}</td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('products_index') }}">Retour à la liste des produits</a>

    <a class="btn btn-warning float-right d-inline" href="{{ path('products_edit', {'id': product.id}) }}">Modifier les informations du produit</a>

    {{ include('products/_delete_form.html.twig') }}

</div>
{% endblock %}
